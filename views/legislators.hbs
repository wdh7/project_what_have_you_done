<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Legislators</title>
    <link rel='stylesheet' href='../public/styles/reset.css'>
    <link rel='stylesheet' href='../public/styles/style.css'>
  </head>
  <body>

    <section class='legislators'>
      <div class='legislators-wrapper'>

        <div class='legislators-header'>
          <h1>What Have You Done?</h1>
          <p>{{zip}}</p>
        </div>

        <section id='members'>
          <div class='members'>
            <h3>House</h3>
              {{#each house as |member|}}
              <div class='member'>
                <img src='{{member.img}}' />
                <h4><a href='#'>{{member.fullName}}</a></h4>
                <h4>{{member.party}}-{{member.state}}</h4>
              </div>
              {{/each}}
          </div>

          <div class='members'>
            <h3>Senate</h3>
              {{#each senate as |senator|}}
              <div class='member'>
                <img src='{{senator.img}}' />
                <h4><a href='#'>{{senator.fullName}}</a></h4>
                <h4>{{senator.party}}-{{senator.state}}</h4>
              </div>
            {{/each}}
          </div>
        </section>

      </div>
    </section>

  </body>
</html>
